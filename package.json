{
	"name": "codetowin",
	"displayName": "Code To Win",
	"description": "Parse Test Cases From Coding Websites, Compile/Run and many other features",
	"publisher": "Arpan Kumar Chakraborty",
	"author": {
		"name": "Arpan Kumar Chakraborty",
		"email": "arpanrkmgec@gmail.com"
	},
	"icon": "./image/CodeToWin.png",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.46.0"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"keywords": ["ctw","codewin"],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codetowin.newContest",
		"onCommand:codetowin.compileRun",
		"onCommand:codetowin.compileAndRun",
		"onCommand:codetowin.addCustomTestCase"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codetowin.newContest",
				"title": "New Contest",
				"category": "Code To Win"
			},
			{
				"command": "codetowin.compileRun",
				"title": "Compile And Run Against Parsed Test Cases",
				"category": "Code To Win"
			},
			{
				"command": "codetowin.compileAndRun",
				"title": "Compile And Run (Interactive Input)",
				"category": "Code To Win"
			},
			{
				"command": "codetowin.addCustomTestCase",
				"title" : "Add New Test Case",
				"category": "Code To Win"
			}
		],
		"configuration": {
			"title": "codetowin",
			"properties": {
				"codetowin.CppVersion": {
					"type": "string",
					"default": "c++11",
					"enum":[
						"c++98",
						"c++03",
						"c++11",
						"c++14",
						"c++17",
						"c++20"
					]
				},
				"codetowin.cVersion":{
					"type":"string",
					"default":"c11",
					"enum":[
						"c99",
						"c11"
					]
				}
			}
		},
		"keybindings":[
			{
				"command": "codetowin.newContest",
				"key": "ctrl+n"
			},
			{
				"command": "codetowin.compileRun",
				"key": "f5",
				"when": "editorTextFocus"
			},
			{
				"command": "codetowin.compileAndRun",
				"key": "f6",
				"when": "editorTextFocus"
			},
			{
				"command": "codetowin.addCustomTestCase",
				"key": "ctrl+t",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"puppeteer": "^4.0.1"
	}
}
